{
  "redirects": [
    {
      "source": "/",
      "has": [{ "type": "host", "value": "quanor.com" }],
      "destination": "https://www.quanor.com/",
      "permanent": true
    },
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "quanor.com" }],
      "destination": "https://www.quanor.com/:path*",
      "permanent": true
    },

    { "source": "/sv/contact", "destination": "/sv", "permanent": true },
    { "source": "/en/contact", "destination": "/en", "permanent": true },
    { "source": "/contact",    "destination": "/",   "permanent": true },
    { "source": "/sv/philosophy", "destination": "/sv", "permanent": true },
    { "source": "/en/philosophy", "destination": "/en", "permanent": true },
    { "source": "/philosophy", "destination": "/",   "permanent": true },

    {
      "source": "/((?!api|.*\\.|$).+)/",
      "destination": "/$1",
      "permanent": true
    }
  ],
  "rewrites": [
    { "source": "/((?!api|.*\\.).*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Strict-Transport-Security", "value": "max-age=63072000; includeSubDomains; preload" }
      ]
    }
  ]
}
